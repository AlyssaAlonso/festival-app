<%- include('../partials/header'); %>
<body>
  <form action="/booths" method="POST">
    <label>Name: </label>
    <br />
    <input type="text" name="name" />
    <br />
    <label> Description:</label>
    <br />
    <input type="text" name="description" />
    <br />
    <label>Pavilion:</label>
    <select name="pavilion">
      <% pavilions.forEach(pavilion => { %>
      <option value="<%= pavilion._id %>"><%= pavilion.name %></option>
      <% }); %></select
    ><br />
    <button type="submit">Create Booth</button>
  </form>
</body>
<%- include('../partials/footer'); %>
