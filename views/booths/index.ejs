<%- include('../partials/header'); %>
<body>
  <a href="/booths/new">
    <h3 class="new-link">Add a Booth</h3>
  </a>
  <br />

  <div class="cards-container">
    <% booths.forEach((booth, index) => { %>
    <div class="card">
      <div
        class="card-image"
        style="
          background-image: url('https://source.unsplash.com/collection/2533969/1600x900?sig=<%= Date.now() + index %>');
        "
      ></div>
      <div class="card-text">
        <div>
          <h2><%= booth.name %></h2>
          <p><%= booth.description %></p>
        </div>
        <div class="card-links">
          <a href="/booths/<%= booth.id %>">View Menu</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>

  <br />
</body>
<%- include('../partials/footer'); %>
