<%- include('../partials/header') %>
<a href="/items/new">
  <h3 class="new-link">Add a Menu Item</h3>
</a>
<br />
<div class="cards-container">
  <div class="large-menu-card">
    <div
      class="card-image"
      style="
        background-image: url('https://source.unsplash.com/collection/2533969/1600x900?sig=<%= Date.now() + 0 %>');
      "
    ></div>
    <table id="list">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Booth</th>
          <th>Pavilion</th>
          <th>Description</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% items.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td>$<%= item.price.toFixed(2) %></td>
          <td><%= item.booth %></td>
          <td><%= item.pavilion %></td>
          <td><%= item.description %></td>
          <td><a href="/items/<%= item._id %>">Reviews</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
<%- include('../partials/footer') %>
