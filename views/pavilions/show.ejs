<%- include('../partials/header'); %>
<body>
  <p><%= pavilion.description %></p>
  <h2>Booths</h2>
  <div class="cards-container">
    <% boothList.forEach((booth, index) => { %>
    <div class="card">
      <div
        class="card-image"
        style="
          background-image: url('https://source.unsplash.com/collection/2533969/1600x900?sig=<%= Date.now() + index %>');
        "
      ></div>
      <div class="card-text">
        <div>
          <h2><%= booth.name %></h2>
          <p><%= booth.description %></p>
        </div>
        <a href="/booths/<%= booth.id %>">View Menu</a>
      </div>
    </div>
    <% }) %>
  </div>
</body>
<%- include('../partials/footer'); %>
