<%- include('../partials/header'); %>
<body>
  <p><%= pavilion.description %></p>
  <br />
  <div class="cards-container">
    <% pavilion.booths.forEach((booth, index) => { %>
    <div class="menu-card">
      <div
        class="card-image"
        style="
          background-image: url('https://source.unsplash.com/collection/2533969/1600x900?sig=<%= Date.now() + index %>');
        "
      ></div>
      <div class="menu-item-card-text">
        <h2><%= booth.name %></h2>
        <p><%= booth.description %></p>
      </div>

      <table id="list">
        <thead>
          <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% pavilion.items.forEach(item => { %> <% if (item.booth ===
          booth.name) { %>
          <tr>
            <td><%= item.name %></td>
            <td>$<%= item.price.toFixed(2) %></td>
            <td><%= item.description %></td>
            <td><a href="/items/<%= item._id %>">Reviews</a></td>
          </tr>
          <% } %> <% }); %>
        </tbody>
      </table>
    </div>
    <% }) %>
  </div>
</body>
<%- include('../partials/footer'); %>
